<p id="notice"><%= notice %></p>



<div class="panel panel-default">
  <div class="panel-heading"><h2>Customer List</h2></div>
<div class="panel panel-warning">
  </div>
  </div>
  <div class="panel panel-warning">
  
  <div class="panel panel-body">
    <%=
  link_to 'Download as Excel',
  customers_path(format: :xlsx)
%>

<%=
  link_to 'Upload from Excel',
  new_customers_import_path
%>
</div>
<table class="table table-striped table-bordered table-hover table-condensed">
  <thead class="bg-primary">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Mobilenumber</th>
      <th>Address</th>
      <th>Pincode</th>
      <th>Age</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.email %></td>
        <td><%= customer.mobilenumber %></td>
        <td><%= customer.address %></td>
        <td><%= customer.pincode %></td>
        <td><%= customer.age.age %></td>
        <td><%= customer.country.name %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create New Customer', new_customer_path, {:style=>'color:#00000;', :class => "btn-info btn-sm"} %>
</div>