  </nav>
</div>
</div>
  <!-- Header -->


      <div class="intro-text">
        <div class="intro-lead-in">Welcome To HelpMate!</div>
        <div class="intro-heading text-uppercase">You are at right place now!</div>
        <%= link_to 'Login',welcome_homepage_path ,:class  => "btn btn-info btn lg" %>
